<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:listDivider">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ForgotPasswordButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/forgot_password</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/button_empty_template</item>
    </style>

    <style name="DoNotHaveAnAccountText">
        <item name="android:text">@string/dont_have_account</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OrText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/or</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ResetPasswordTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/reset_password_title</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ResetPasswordText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/reset_password_text</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ErrorText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="AuthEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AuthHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <style name="AuthScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_below">@id/toolbar</item>
        <item name="android:scrollbars">none</item>
    </style>
    <!--
        Buttons Styles
    -->

    <style name="ButtonTemplate">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_template</item>
        <item name="android:textColor">@color/button_template_color</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="ButtonTemplate2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_template_2</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!--End-->
</resources>
