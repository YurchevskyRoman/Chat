<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chat_profile_photo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/placeholder_avatar"/>
        <TextView
                android:id="@+id/chat_name"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="@string/template_username"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_toLeftOf="@id/how_message"
                android:layout_toRightOf="@id/chat_profile_photo"/>
        <TextView
                android:id="@+id/chat_last_message"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:text="@string/template_last_message"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_below="@id/chat_name"
                android:layout_toLeftOf="@id/how_message"
                android:layout_toRightOf="@id/chat_profile_photo"
                style="@style/CutTextView"/>
        <TextView
                android:id="@+id/how_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/template_how_message"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:paddingRight="9dp"
                android:paddingLeft="9dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:layout_margin="3dp"
                style="@style/CutTextView"
                android:layout_alignParentRight="true"
                android:background="@drawable/circle_background_primary"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>